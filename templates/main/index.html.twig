{% extends 'base.html.twig' %}

{% block title %}Web Academy{% endblock %}

{% block body %}

<div id="background" class="PC"></div>

<div class="ui container">
  <h1 class="landingTitle">{% trans %}Bienvenue sur Web Academy !{% endtrans %}</h1>
  <h3 class="landingSubheader subheader"><small>{% trans %}Crééz, innovez, apprenez</small>{% endtrans %}</h3>
</div>

<div class="ui link centered cards landingCards">
